{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "alexrogachev/cv-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "api",
      "image": "alexrogachev/cv-api",
      "hostname": "api",
      "essential": false,
      "memory": 256
    },
    {
      "name": "processor",
      "image": "alexrogachev/cv-processor",
      "hostname": "processor",
      "essential": false,
      "memory": 256
    },
    {
      "name": "nginx",
      "image": "alexrogachev/cv-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "client",
        "server"
      ],
      "memory": 128
    }
  ]
}